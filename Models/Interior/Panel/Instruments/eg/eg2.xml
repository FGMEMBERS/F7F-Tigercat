<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>eg.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle0</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    
    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>
  
  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/F7F-Tigercat/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle0</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <!-- OIL PRESSURE -->  
  <animation> 
    <type>rotate</type>
    <object-name>needle0</object-name>
    <property>/engines/engine[1]/oil-pressure-psi</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
      <entry><ind> 130 </ind><dep> 100 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.0000 </x-m>
      <y-m> 0.0000 </y-m>
      <z-m> 0.0043 </z-m>  
    </center>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- FUEL PRESSURE -->  
  <animation> 
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>/engines/engine[1]/fuel-pressure-psi</property>
    <interpolation>
      <entry><ind>  0 </ind><dep>    0 </dep></entry>
      <entry><ind>  8 </ind><dep> -130 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.0000 </x-m>
      <y-m> -0.0141 </y-m>
      <z-m> -0.0091 </z-m>
    </center>
    <axis> 
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <!-- TEMPERATURE -->
  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>engines/engine[1]/cht-degc</property>
    <interpolation>
      <entry><ind>  -50 </ind><dep> -28 </dep></entry>
      <entry><ind>    0 </ind><dep>   0 </dep></entry>
      <entry><ind>  150 </ind><dep> 105 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.0000 </x-m>
      <y-m> 0.0141 </y-m>
      <z-m> 0.0091 </z-m>  
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
